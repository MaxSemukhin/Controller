@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<link href="/css/loginPage.css" rel="stylesheet" type="text/css">

@*<h1>@ViewData["Title"]</h1>*@

<div class="row">
    <div class="col-12 layout">
        <div class="selector">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <a class="nav-link select_button" id="login" asp-area="Identity" asp-page="/Account/Login">Войти</a>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <a class="nav-link select_button active" id="register" asp-area="Identity" asp-page="/Account/Register">Зарегистрироваться</a>
                </div>
            </div>
        </div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <img src="../../img/profileIcon.svg" class="inputIcons"/>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Почта"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <img src="../../img/passwordIcon.svg" class="inputIcons"/>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Пароль" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <img src="../../img/passwordIcon.svg" class="inputIcons"/>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Повторите пароль" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 loginAccount">Зарегистрироваться </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
